<script>
        function showPasswordInput() {
            // Ẩn nút và hiển thị khung nhập mật khẩu khi người dùng nhấp vào nút
            document.getElementById("buttonContainer").style.display = "none";
            document.getElementById("passwordInputContainer").style.display = "block";
        }

        function checkPassword() {
            const password = document.getElementById("passwordInput").value;

            // Kiểm tra mật khẩu (đây chỉ là mật khẩu đơn giản để minh họa)
            if (password === "matkhau") {
                // Ẩn khung nhập mật khẩu và hiển thị khung bao bọc nội dung bảo vệ
                document.getElementById("passwordInputContainer").style.display = "none";
                document.getElementById("contentContainer").style.display = "block";
            } else {
                alert("Mật khẩu không đúng. Vui lòng thử lại.");
            }
        }
    </script>
